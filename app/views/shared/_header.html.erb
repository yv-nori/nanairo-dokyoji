<%# ==================================== %>
<header>
  <div class="L_header isMoveTop" id="JS_scroll-change_target-H0">
    <div class="L_header__inner">
      <%#-- ロゴ --%>
      <h1 class="L_header__logo">
        <div class="L_header__logo-image isMoveTop" id="JS_scroll-change_target-H1"></div>
        <%= link_to "", root_path, class:"U_link"%>
      </h1>
      <%#-- メニューリストPC --%>
      <nav class="L_header__pc-nav">
        <ul class="L_header__pc-nav-items pc-only">
          <li class="L_header__pc-nav-item">
            <%= link_to '七彩学舎について', about_home_index_path, class: 'L_header__pc-nav-text' %>
          </li>
          <li class="L_header__pc-nav-item">
            <%= link_to '入園をお考えの方へ', admission_home_index_path, class: 'L_header__pc-nav-text' %>
