    <li class="P_about__nav__list">
      <img srcset="https://dazq5oer2h0ku.cloudfront.net/images/features/<%= name_items[:name_en]%>_expression_sp.jpg 600w, https://dazq5oer2h0ku.cloudfront.net/images/features/<%= name_items[:name_en]%>_expression_tab.jpg 1025w, https://dazq5oer2h0ku.cloudfront.net/images/features/<%= name_items[:name_en]%>_expression_pc.jpg" alt="特色(表現)バナー画像" class="C_image">
