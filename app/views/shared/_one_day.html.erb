<%#-- TODO テンプレート化 --%>
<div id="JS_smoothScroll_target-0"></div>
<section class="P_one-day">
  <div class="P_one-day__wrap">
    <h1 class="P_one-day__title-en">ONE DAY</h1>
    <h1 class="P_one-day__title-ja">
      園の一日
      <div class="P_one-day__title-deco left">
        <div class="C_deco__sparkle1"></div>
      </div>
      <div class="P_one-day__title-deco right">
        <div class="C_deco__sparkle2"></div>
      </div>
      <svg class="P_one-day__deco-line line1" x="0px" y="0px">
        <line x1="2%" y1="50%" x2="100%" y2="50%"/>
      </svg>
    </h1>
    <div class="P_one-day__js-wrap">
      <div class="P_one-day__content-wrap pc-only">
        <div class="P_one-day__container left">
          <% items.each_with_index do |items, i| %>
            <% if i.even? do %>
              <div class="P_one-day__img <%= i = 0 ? 'first'%>">
                <picture>
                  <source srcset="https://dazq5oer2h0ku.cloudfront.net/images/one-day/<%= name_items[:name_en] %>_<%= i %>_pc.webp" media="(min-width: 1025px)" type="image/webp" class="C_image"/>
                  <source srcset="https://dazq5oer2h0ku.cloudfront.net/images/one-day/<%= name_items[:name_en] %>_<%= i %>_tab.webp" media="(min-width: 600px)" type="image/webp" class="C_image"/>
                  <source srcset="https://dazq5oer2h0ku.cloudfront.net/images/one-day/<%= name_items[:name_en] %>_<%= i %>_sp.webp 1x, https://dazq5oer2h0ku.cloudfront.net/images/one-day/<%= name_items[:name_en] %>_<%= i %>_sp2.webp 2x" type="image/webp" class="C_image"/>
                  <img src="https://dazq5oer2h0ku.cloudfront.net/images/one-day/<%= name_items[:name_en] %>_<%= i %>_alt.jpg" alt="一日の流れ<%= i + 1 %>" class="C_image"/>
                </picture>
                <% if i > 0 do %>
                  <div class="P_one-day__deco deco<% i %>">
                    <div class="C_deco__one-day-deco-<% i %>"></div>
                  </div>
                  <div class="P_one-day__deco arrow-left">
                    <div class="C_deco__arrow-left"></div>
                  </div>
                <% end %>
                <div class="P_one-day__text-box">
                  <div class="P_one-day__time">
                    <%= items[:time] %>
                  </div>
                  <div class="P_one-day__title">
                    <%= items[:title] %>
                  </div>
                  <% if items[:class] === 'infant' do %>
                    <div class="P_one-day__class <%= items[:class_en] %>">
                      乳児クラス
                    </div>
                  <% if else items[:class] === 'toddler' do %>
                    <div class="P_one-day__class <%= items[:class_en] %>">
                      幼児クラス
                    </div>
                  <% end %>
                  <div class="P_one-day__text">
                    <%= items[:text].html_safe %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="P_one-day__container right">
          <% items.each_with_index do |items, i| %>
            <% if i.odd? do %>
              <div class="P_one-day__img <%= i = 1 ? 'first'%>">
                <picture>
                  <source srcset="https://dazq5oer2h0ku.cloudfront.net/images/one-day/<%= name_items[:name_en] %>_<%= i %>_pc.webp" media="(min-width: 1025px)" type="image/webp" class="C_image"/>
                  <source srcset="https://dazq5oer2h0ku.cloudfront.net/images/one-day/<%= name_items[:name_en] %>_<%= i %>_tab.webp" media="(min-width: 600px)" type="image/webp" class="C_image"/>
                  <source srcset="https://dazq5oer2h0ku.cloudfront.net/images/one-day/<%= name_items[:name_en] %>_<%= i %>_sp.webp 1x, https://dazq5oer2h0ku.cloudfront.net/images/one-day/<%= name_items[:name_en] %>_<%= i %>_sp2.webp 2x" type="image/webp" class="C_image"/>
                  <img src="https://dazq5oer2h0ku.cloudfront.net/images/one-day/<%= name_items[:name_en] %>_<%= i %>_alt.jpg" alt="一日の流れ<%= i + 1 %>" class="C_image"/>
                </picture>
                  <div class="P_one-day__deco deco<% i %>">
                    <div class="C_deco__one-day-deco-<% i %>"></div>
                  </div>
                  <% if i === 1 do %>
                    <div class="P_one-day__deco arrow-right-L">
                      <div class="C_deco__arrow-right-L"></div>
                    </div>
                  <% else %>
                    <div class="P_one-day__deco arrow-right">
                      <div class="C_deco__arrow-right"></div>
                    </div>
                  <% end %>
                <div class="P_one-day__text-box">
                  <div class="P_one-day__time">
                    <%= items[:time] %>
                  </div>
                  <div class="P_one-day__title">
                    <%= items[:title] %>
                  </div>
                  <% if items[:class] === 'infant' do %>
                    <div class="P_one-day__class <%= items[:class_en] %>">
                      乳児クラス
                    </div>
                  <% if else items[:class] === 'toddler' do %>
                    <div class="P_one-day__class <%= items[:class_en] %>">
                      幼児クラス
                    </div>
                  <% end %>
                  <div class="P_one-day__text">
                    <%= items[:text].html_safe %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="P_one-day__content-wrap tab-sp-only">
        <% items.each_with_index do |items, i| %>
          <div class="P_one-day__img <%= i = 1 ? 'first'%>">
            <picture>
              <source srcset="https://dazq5oer2h0ku.cloudfront.net/images/one-day/<%= name_items[:name_en] %>_<%= i %>_pc.webp" media="(min-width: 1025px)" type="image/webp" class="C_image"/>
              <source srcset="https://dazq5oer2h0ku.cloudfront.net/images/one-day/<%= name_items[:name_en] %>_<%= i %>_tab.webp" media="(min-width: 600px)" type="image/webp" class="C_image"/>
              <source srcset="https://dazq5oer2h0ku.cloudfront.net/images/one-day/<%= name_items[:name_en] %>_<%= i %>_sp.webp 1x, https://dazq5oer2h0ku.cloudfront.net/images/one-day/<%= name_items[:name_en] %>_<%= i %>_sp2.webp 2x" type="image/webp" class="C_image"/>
              <img src="https://dazq5oer2h0ku.cloudfront.net/images/one-day/<%= name_items[:name_en] %>_<%= i %>_alt.jpg" alt="一日の流れ<%= i + 1 %>" class="C_image"/>
            </picture>
            <% if i > 0 do %>
              <div class="P_one-day__deco deco<% i %>">
                <div class="C_deco__one-day-deco-<% i %>"></div>
              </div>
            <% end %>
            <% if i === 1 do %>
              <div class="P_one-day__deco arrow-right-L">
                <div class="C_deco__arrow-right-L"></div>
              </div>
            <% if else i > 1 && i.odd? do %>
              <div class="P_one-day__deco arrow-right">
                <div class="C_deco__arrow-right"></div>
              </div>
            <% if else i > 1 && i.even? do %>
              <div class="P_one-day__deco arrow-left">
                <div class="C_deco__arrow-left"></div>
              </div>
            <% end %>
            <div class="P_one-day__text-box">
              <div class="P_one-day__time">
                <%= items[:time] %>
              </div>
              <div class="P_one-day__title">
                <%= items[:title] %>
              </div>
                <% if items[:class] === 'infant' do %>
                  <div class="P_one-day__class <%= items[:class_en] %>">
                    乳児クラス
                  </div>
                <% if else items[:class] === 'toddler' do %>
                  <div class="P_one-day__class <%= items[:class_en] %>">
                    幼児クラス
                  </div>
                <% end %>
              <div class="P_one-day__text">
                <%= items[:text].html_safe %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<%= render 'shared/side-bar_noBack',{color: ''}%>
