      <div class="P_about__map__title-deco left">
        <div class="C_deco__sparkle1"></div>
      </div>
      <div class="P_about__map__title-deco right">
        <div class="C_deco__sparkle2"></div>
      </div>
      <svg class="P_about__map__deco-line" x="0px" y="0px" >
        <line x1="2%" y1="50%" x2="100%" y2="50%"/>
      </svg>
    </h1>
    <div class="P_about__map__canvas">
      <div class="P_about__map__img-box">
        <img srcset="https://dazq5oer2h0ku.cloudfront.net/images/about/<%= name_items[:name_en]%>_map_2F_sp.png 600w, https://dazq5oer2h0ku.cloudfront.net/images/about/<%= name_items[:name_en]%>_map_2F_tab.png 1025w, https://dazq5oer2h0ku.cloudfront.net/images/about/<%= name_items[:name_en]%>_map_2F_pc.png" alt="園内マップ2F" class="C_image__contain">
        <% for i in 0..items[:map_2F_length] do %>
          <div class="P_about__map__number-box <%= name_items[:name_en] %>_2F_<%= i %>" id='JS_imgSlideModal_trigger-<%= i + items[:map_1F_length] + 1%>'>
            <span class="P_about__map__number"><%= i + items[:map_1F_length] + 2  %></span>
          </div>
        <% end %>
      </div>
      <div class="P_about__map__deco babble <%= name_items[:name_en] %>">
        <div class="C_deco__babble1"></div>
      </div>
      <div class="P_about__map__deco triangle <%= name_items[:name_en] %>">
        <div class="C_deco__triangle1"></div>
      </div>
    </div>
  </div>
</section>
