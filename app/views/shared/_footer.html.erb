<footer>
  <div class="L_footer">
    <div class="L_footer__inner">
      <div class="C_box__side-bar pc-tab-only <%= 'A_isNone' if side_bar === false %>"></div>
      <h1 class="L_footer__logo">
        <div class="L_footer__logo-box">
          <div class="C_image__logo<%= name[:logo] %>"></div>
        </div>
      </h1>
      <nav class="L_footer__nav-inner">
        <ul class="L_footer__list">
          <% footer[:lists].each do |list| %>
            <li class="L_footer__list-item">
              <%= link_to list[:title], list[:link], class: 'L_footer__list-link' %>
            </li>
          <% end %>
        </ul>
      </nav>
      <div class="L_footer__bottom" >
        <p class="L_footer__text">
          <%= footer[:address] %><br class="tab-sp-only">
          <span class="pc-only">　</span>
          <%= footer[:tel] %>
        </p>
        <p class="L_footer__text">
          <small>Copyright © Nanairo Gakusya<br class="tab-sp-only">
          <span class="pc-only"> </span>
          Partners Inc. All Rights Reserved.</small>
        </p>
      </div>
    </div>
  </div>
</footer>
