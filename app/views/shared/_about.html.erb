<section class="P_about__map-nav" id="map">
  <div class="P_about__wave-trim">
    <svg viewBox="0 0 1500 50" class="P_about__wave">
      <path d="M0,0 v25 q10,10 20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 v-25 Z" fill="#F4F4F2"></path>
    </svg>
  </div>
  <div class="P_about__map-nav__title">園内マップ</div>
  <div class="P_about__map-nav__text">数字をクリックすると、<br class="sp-only">各部屋の写真をご覧いただけます。</div>
  <div class="P_about__map-nav__container">
    <ul class="P_about__map-nav__lists">
      <% map_items.each_with_index do |item, i| %>
        <li class="P_about__map-nav__list">
          <div class="P_about__map-nav__list-box" id='JS_imgSlide_trigger-<%= i %>'>
            <div class="P_about__map-nav__list-number-box">
              <span class="P_about__map-nav__list-number"><%= i + 1 %></span>
            </div>
            <div class="P_about__map-nav__list-title" id='JS_imgSlide_title-<%= i %>'><%= item[:title] %></div>
          </div>
        </li>
      <% end %>
    </ul>
    <div class="P_about__map-nav__img-box">
      <div class="P_about__map-nav__img-number-box">
        <span class="P_about__map-nav__img-number" id='JS_imgSlide_number'>1</span>
      </div>
      <div class="P_about__map-nav__frame"></div>
      <div class="P_about__map-nav__contents">
        <div class="P_about__map-nav__img-title" id='JS_imgSlide_title'>
          <%= map_items[0][:title] %>
          <div class="P_about__map-nav__text-deco left">
            <div class="C_deco__font-deco1"></div>
          </div>
          <div class="P_about__map-nav__text-deco right">
            <div class="C_deco__font-deco2"></div>
          </div>
        </div>
        <div class="P_about__map-nav__imgs">
          <% map_items.each_with_index do |item, i| %>
            <div class="P_about__map-nav__img <%= "isActive" if i === 0 %>" id='JS_imgSlide_target-<%= i %>'>
            <img srcset="https://dazq5oer2h0ku.cloudfront.net/images/about/<%= name_items[:name_en]%>_map_<%= item[:photo] %>_sp.jpg 600w, https://dazq5oer2h0ku.cloudfront.net/images/about/<%= name_items[:name_en]%>_map_<%= item[:photo] %>_tab.jpg 1025w, https://dazq5oer2h0ku.cloudfront.net/images/about/<%= name_items[:name_en]%>_map_<%= item[:photo] %>_pc.jpg" alt="園内画像<%= i + 1 %>" class="C_image">
            </div>
          <% end %>
          <div class="P_about__map-nav__img-slider left" id='JS_imgSlide_prev'>
            <i class="fa fa-caret-left P_about__map-nav__icon"></i>
          </div>
          <div class="P_about__map-nav__img-slider right isActive" id='JS_imgSlide_next'>
            <i class="fa fa-caret-right P_about__map-nav__icon"></i>
          </div>
        </div>
        <div class="P_about__map-nav__img-count" id='JS_imgSlide_count'>
          Image 1 of <%= map_items_length %>
        </div>
      </div>
    </div>
  </div>
  <div class="P_about__wave-trim reverse">
    <svg viewBox="0 0 1500 50" class="P_about__wave reverse">
      <path d="M0,0 v25 q10,10 20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 t20,0 v-25 Z" fill="#F4F4F2"></path>
    </svg>
  </div>
</section>
<div class="P_about__modal" id='JS_imgSlideModal'>
  <div class="P_about__modal__overlay"></div>
  <div class="P_about__modal__container">
    <div class="P_about__modal__content-box">
      <div class="P_about__modal__title" id='JS_imgSlideModal_title'>
        <%= map_items[0][:title] %>
      </div>
      <div class="P_about__modal__img-box">
        <% map_items.each_with_index do |item, i| %>
          <div class="P_about__modal__img <%= "isActive" if i === 0 %>" id='JS_imgSlideModal_target-<%= i %>'>
            <img srcset="https://dazq5oer2h0ku.cloudfront.net/images/about/<%= name_items[:name_en]%>_map_<%= item[:photo] %>_sp.jpg 600w, https://dazq5oer2h0ku.cloudfront.net/images/about/<%= name_items[:name_en]%>_map_<%= item[:photo] %>_tab.jpg 1025w, https://dazq5oer2h0ku.cloudfront.net/images/about/<%= name_items[:name_en]%>_map_<%= item[:photo] %>_pc.jpg" alt="園内画像<%= i + 1 %>" class="C_image">
          </div>
        <% end %>
        <div class="P_about__modal__slider left" id='JS_imgSlideModal_prev'>
          <i class="fa fa-caret-left P_about__modal__icon"></i>
        </div>
        <div class="P_about__modal__slider right" id='JS_imgSlideModal_next'>
          <i class="fa fa-caret-right P_about__modal__icon"></i>
        </div>
      </div>
      <div class="P_about__modal__count" id='JS_imgSlideModal_count'>Image 1 of <%= map_items_length %></div>
      <div class="P_about__modal__close-btn" id='JS_imgSlideModal_close'>
        <i class="P_about__modal__close-icon far fa-times-circle"></i>
      </div>
      <div class="P_about__modal__number-box">
        <div class="P_about__modal__number" id='JS_imgSlideModal_number'>1</div>
      </div>
    </div>
  </div>
</div>
<section class="P_about__map">
  <div class="P_about__map__container">
    <h1 class="P_about__map__title-ja margin-top">
      1F
      <div class="P_about__map__title-deco left">
        <div class="C_deco__sparkle1"></div>
      </div>
      <div class="P_about__map__title-deco right">
        <div class="C_deco__sparkle2"></div>
      </div>
